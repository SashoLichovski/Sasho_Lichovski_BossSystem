@{ 
    <style>
        form{
            width: 500px;
            margin: auto;
        }
    </style>
}
<div class="container">
    <form asp-action="Deposit">
        <h3>Enter the amount of money you want to deposit</h3>
        <br />
        <input name="amount" class="form-control" />
        <input value="@int.Parse(@User.FindFirst("Id").Value)" name="id" class="form-control" type="hidden"/>
        <br />
        <input type="submit"  class="btn btn-primary"/>
    </form>
</div>