@model BossSystem.ViewModels.ChangePasswordModel

    <div class="container">
        <form asp-controller="User" asp-action="ChangePassword">
            <input placeholder="Old password" asp-for="OldPassword" class="form-control" style="margin-bottom: 30px;" />
            <br />
            <input placeholder="Password" asp-for="Password" class="form-control" />
            <br />
            <input placeholder="Confirm password" asp-for="ConfirmPassword" class="form-control" />
            <br />
            <input type="hidden" asp-for="Id" class="form-control" />
            <br />
            <input type="hidden" asp-for="Username" class="form-control" />

            <br />
            <input class="btn btn-dark text-light" value="Change" type="submit">

        </form>
        <div asp-validation-summary="All" class="text-danger" style="position: absolute;"></div>
    </div>
